{% extends 'base.html.twig' %}

{% block title %}{{ 'Company'|trans}}{% endblock %}

{% block body %}
    <div class="container mt-4">
        <h1>{{ 'Company'|trans}}</h1>

        <table class="table">
            <tbody>
                <tr>
                    <th>Id</th>
                    <th>{{ 'Name'|trans}}</th>
                    <th>{{ 'Siren number'|trans}}</th>
                    <th>{{ 'City registration'|trans}}</th>
                    <th>{{ 'Share social'|trans}}</th>
                    <th>{{ 'Date registration'|trans}}</th>
                </tr>
                <tr>
                    <td>{{ company.id }}</td>
                    <td>{{ company.name }}</td>
                    <td>{{ company.sirenNumber() }}</td>
                    <td>{{ company.cityRegistration }}</td>
                    <td>{{ company.shareSocial }}</td>
                    <td>{{ company.dateRegistration|date('d-m-Y H:i:s') }}</td>
                </tr>
            </tbody>
        </table>

        <div class="text-right">
            <a href="{{ path('company_index') }}" class="btn btn-primary">{{ 'Back to list'|trans}}</a>
        </div>
    </div>
{% endblock %}
